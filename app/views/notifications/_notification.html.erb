<%= link_to tweet_path(like.tweet), id: dom_id(like, :notification), class: "alert alert-info shadow-lg mb-4" do %>
  <div class="text-black">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current flex-shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
    <span class="text-black">
      <%= like.user.id == current_user.id ? 'You' : like.user.name %> liked your tweet "<%= like.tweet.body.truncate(50) %>"
    </span>
  </div>
  <div class="text-black">
    <small><%= like.updated_at.strftime("%B %d, %Y") %></small>
  </div>
<% end %>